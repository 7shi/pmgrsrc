#!/usr/bin/env bash
# This file is in the public domain.

if [ $# -gt 0 ]
then
	tar=tar
	target=$1
	shift
	if [ "$target" = "-gtar" ]
	then
		tar=gtar
		target=$1
		shift
	fi
	case $target in
		z | j | J)
			type=$target;
			target=$1
			shift
			;;
		*.tar.gz | *.tgz)
			type=z
			;;
		*.tar.bz2 | *.tbz)
			type=j
			;;
		*.tar.xz | *.txz)
			type=J
			;;
		*.pmgr)
			if [ `od -An -tx1 -N4 $target | sed 's/ //g'` = "425a6839" ]
			then
				type=j
			else
				type=J
			fi
			;;
	esac

	case $type in
		z)
			pmgr-sizecat $target | gzip -dc | $tar xf - "$@"
			exit
			;;
		j)
			pmgr-sizecat $target | bzip2 -dc | $tar xf - "$@"
			exit
			;;
		J)
			pmgr-sizecat $target | xz -dc | $tar xf - "$@"
			exit
			;;
	esac
fi

echo "usage: `basename $0` [-gtar] z/j/J archive"
exit 1
